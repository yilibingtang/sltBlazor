@page "/DongJianMotor"
@rendermode InteractiveServer
<PageTitle>东箭电机数据分析</PageTitle>

<style>
    .container {
        max-width: 1000px;
        margin: 20px auto;
        padding: 0 20px;
        font-family: Arial, sans-serif;
    }
    h2 {
        color: #2c3e50;
        margin-bottom: 25px;
        font-size: 1.8em;
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 10px;
    }
    .input-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }
    .input-group {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }
    .input-group label {
        font-weight: 500;
        color: #34495e;
    }
    .input-group input, .input-group select {
        padding: 8px 12px;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        font-size: 1em;
    }
    .table-container {
        margin: 20px 0;
    }
    .table-container h3 {
        margin-bottom: 15px;
        color: #2c3e50;
        font-size: 1.2em;
    }
    .data-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 15px;
    }
    .data-table th, .data-table td {
        padding: 10px 12px;
        text-align: left;
        border: 1px solid #dee2e6;
    }
    .data-table th {
        background-color: #f8f9fa;
        font-weight: 600;
        color: #2c3e50;
    }
    .data-table tr:hover {
        background-color: #f5f5f5;
    }
    .data-table tr.selected {
        background-color: #e3f2fd;
    }
    .data-table input {
        width: 100%;
        padding: 6px 8px;
        border: 1px solid #ced4da;
        border-radius: 3px;
        font-size: 0.9em;
    }
    .button-group {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }
    .btn {
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9em;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    .btn-primary {
        background-color: #007bff;
        color: white;
    }
    .btn-primary:hover {
        background-color: #0056b3;
    }
    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
    .btn-secondary:hover {
        background-color: #5a6268;
    }
    .btn-danger {
        background-color: #dc3545;
        color: white;
    }
    .btn-danger:hover {
        background-color: #c82333;
    }
    .results-container {
        margin-top: 30px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        border: 1px solid #e9ecef;
    }
    .results-container h3 {
        margin-bottom: 15px;
        color: #2c3e50;
        font-size: 1.2em;
    }
    .equation {
        font-size: 1.1em;
        margin: 10px 0;
        padding: 10px;
        background-color: white;
        border-radius: 4px;
        border-left: 4px solid #007bff;
    }
    .equation-label {
        font-weight: 600;
        color: #34495e;
    }
    .equation-value {
        font-family: 'Courier New', Courier, monospace;
        color: #2c3e50;
    }
</style>

<div class="container">
    <h2>东箭电机数据分析</h2>
    
    <!-- 基本信息输入 -->
    <div class="input-row">
        <div class="input-group">
            <label for="motorName">电机名称</label>
            <input type="text" id="motorName" @bind="MotorName" placeholder="请输入电机名称" />
        </div>
        <div class="input-group">
            <label for="rotationDirection">转向</label>
            <select id="rotationDirection" @bind="RotationDirection">
                <option value="顺时针">顺时针</option>
                <option value="逆时针">逆时针</option>
            </select>
        </div>
    </div>
    
    <!-- 数据表格 -->
    <div class="table-container">
        <h3>电机测试数据</h3>
        <table class="data-table">
            <thead>
                <tr>
                    <th>扭矩 (Nm)</th>
                    <th>电流 (A)</th>
                    <th>转速 (rpm)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (point, index) in DataPoints.Select((p, i) => (p, i)))
                {
                    <tr @onclick="() => SelectRow(index)" class="@(SelectedIndex == index ? "selected" : "")">
                        <td><input type="number" step="0.01" @bind="point.Torque" /></td>
                        <td><input type="number" step="0.01" @bind="point.Current" /></td>
                        <td><input type="number" step="1" @bind="point.Speed" /></td>
                    </tr>
                }
            </tbody>
        </table>
        
        <!-- 表格操作按钮 -->
        <div class="button-group">
            <button class="btn btn-secondary" @onclick="AddRow">在选中行下方添加</button>
            <button class="btn btn-danger" @onclick="DeleteRow" disabled="@(SelectedIndex == -1)">删除选中行</button>
        </div>
    </div>
    
    <!-- 计算按钮 -->
    <div class="button-group">
        <button class="btn btn-primary" @onclick="CalculateFits">计算拟合直线</button>
    </div>
    
    <!-- 拟合结果 -->
    @if (ShowResults)
    {
        <div class="results-container">
            <h3>拟合结果</h3>
            <div class="equation">
                <span class="equation-label">电流-扭矩关系：</span>
                <span class="equation-value">y = @CurrentFit.A.ToString("F8")x + @CurrentFit.B.ToString("F8")</span>
            </div>
            <div class="equation">
                <span class="equation-label">转速-扭矩关系：</span>
                <span class="equation-value">y = @SpeedFit.A.ToString("F8")x + @SpeedFit.B.ToString("F8")</span>
            </div>
        </div>
    }
</div>

@code {
    // 基本信息
    string MotorName { get; set; } = "";
    string RotationDirection { get; set; } = "顺时针";
    
    // 数据点模型
    class MotorDataPoint
    {
        public double Torque { get; set; } = 0;
        public double Current { get; set; } = 0;
        public double Speed { get; set; } = 0;
    }
    
    // 拟合结果模型
    class LineFitResult
    {
        public double A { get; set; } = 0; // 斜率
        public double B { get; set; } = 0; // 截距
    }
    
    // 数据和状态
    List<MotorDataPoint> DataPoints { get; set; } = new List<MotorDataPoint> { new() };
    int SelectedIndex { get; set; } = 0;
    bool ShowResults { get; set; } = false;
    LineFitResult CurrentFit { get; set; } = new();
    LineFitResult SpeedFit { get; set; } = new();
    
    // 选择行
    void SelectRow(int index)
    {
        SelectedIndex = index;
    }
    
    // 添加行
    void AddRow()
    {
        if (SelectedIndex == -1)
        {
            // 如果没有选中行，添加到末尾
            DataPoints.Add(new MotorDataPoint());
            SelectedIndex = DataPoints.Count - 1;
        }
        else
        {
            // 在选中行下方添加
            DataPoints.Insert(SelectedIndex + 1, new MotorDataPoint());
            SelectedIndex++;
        }
    }
    
    // 删除行
    void DeleteRow()
    {
        if (SelectedIndex >= 0 && DataPoints.Count > 1)
        {
            DataPoints.RemoveAt(SelectedIndex);
            SelectedIndex = Math.Min(SelectedIndex, DataPoints.Count - 1);
        }
    }
    
    // 计算直线拟合
    void CalculateFits()
    {
        if (DataPoints.Count < 2)
        {
            return; // 至少需要两个点才能拟合
        }
        
        // 提取数据
        var torques = DataPoints.Select(p => p.Torque).ToArray();
        var currents = DataPoints.Select(p => p.Current).ToArray();
        var speeds = DataPoints.Select(p => p.Speed).ToArray();
        
        // 拟合电流-扭矩关系
        CurrentFit = LinearFit(torques, currents);
        
        // 拟合转速-扭矩关系
        SpeedFit = LinearFit(torques, speeds);
        
        ShowResults = true;
    }
    
    // 直线拟合算法 (使用MathNet.Numerics库的最小二乘法)
    LineFitResult LinearFit(double[] x, double[] y)
    {
        // 使用MathNet.Numerics进行线性回归
        var coeffs = MathNet.Numerics.Fit.Line(x, y);
        
        LineFitResult result = new();
        result.A = coeffs.Item2; // 斜率
        result.B = coeffs.Item1; // 截距
        
        return result;
    }
}
