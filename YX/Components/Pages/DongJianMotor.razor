@page "/DongJianMotor"
@rendermode InteractiveServer
<PageTitle>东箭电机数据分析</PageTitle>

<div class="container">
    <h2>东箭电机数据分析</h2>
    
    <!-- 基本信息输入 -->
    <div class="input-row">
        <div class="input-group">
            <label for="motorName">电机名称</label>
            <input type="text" id="motorName" @bind="Motor.MotorName" placeholder="请输入电机名称" />
        </div>
    </div>
    
    <!-- 电压输入 -->
    <div class="input-row">
        <div class="input-group">
            <label for="voltage">电压 (V)</label>
            <input type="number" id="voltage" @bind="Motor.Voltage" placeholder="请输入电压" step="0.1" min="0" />
        </div>
    </div>
    
    <!-- 数据表格 -->
    <div class="table-container">
        <h3>电机测试数据</h3>
        <table class="data-table">
            <thead>
                <tr>
                    <th>扭矩 (Nm)</th>
                    <th>电流 (A)</th>
                    <th>转速 (rpm)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (point, index) in DataPoints.Select((p, i) => (p, i)))
                {
                    <tr @onclick="() => SelectRow(index)" class="@(SelectedIndex == index ? "selected" : "")">
                        <td><input type="number" @bind="point.Torque" /></td>
                        <td><input type="number" @bind="point.Current" /></td>
                        <td><input type="number" @bind="point.Speed" /></td>
                    </tr>
                }
            </tbody>
        </table>
        
        <!-- 表格操作按钮 -->
        <div class="button-group">
            <button class="btn btn-secondary" @onclick="AddRow">在选中行下方添加</button>
            <button class="btn btn-danger" @onclick="DeleteRow" disabled="@(SelectedIndex == -1)">删除选中行</button>
        </div>
    </div>
    
    <!-- 计算按钮 -->
    <div class="button-group">
        <button class="btn btn-primary" @onclick="CalculateFits">计算拟合直线</button>
    </div>
    
    <!-- 拟合结果 -->
    @if (ShowResults)
    {
        <div class="results-container">
            <h3>拟合结果</h3>
            <div class="equation">
                <span class="equation-label">电流-扭矩关系：</span>
                <span class="equation-value">y = @FitResult.CurrentCoeffs[1].ToString("F8")x + @FitResult.CurrentCoeffs[0].ToString("F8")</span>
            </div>
            <div class="equation">
                <span class="equation-label">转速-扭矩关系：</span>
                <span class="equation-value">y = @FitResult.SpeedCoeffs[1].ToString("F8")x + @FitResult.SpeedCoeffs[0].ToString("F8")</span>
            </div>
        </div>
    }
    
    <!-- 特性点结果 -->
    @if (ShowResults)
    {
        <div class="results-container">
            <h3>特性点结果</h3>
            <h4>空载点</h4>
            <div class="efficiency-result">
                <div class="result-item">
                    <span class="result-label">扭矩：</span>
                    <span class="result-value">@Motor.NoLoadPoint.Torque.ToString("F8") N·m</span>
                </div>
                <div class="result-item">
                    <span class="result-label">转速：</span>
                    <span class="result-value">@Motor.NoLoadPoint.Speed.ToString("F8") rpm</span>
                </div>
                <div class="result-item">
                    <span class="result-label">电流：</span>
                    <span class="result-value">@Motor.NoLoadPoint.Current.ToString("F8") A</span>
                </div>
            </div>
            
            <h4>堵转点</h4>
            <div class="efficiency-result">
                <div class="result-item">
                    <span class="result-label">扭矩：</span>
                    <span class="result-value">@Motor.StallPoint.Torque.ToString("F8") N·m</span>
                </div>
                <div class="result-item">
                    <span class="result-label">转速：</span>
                    <span class="result-value">@Motor.StallPoint.Speed.ToString("F8") rpm</span>
                </div>
                <div class="result-item">
                    <span class="result-label">电流：</span>
                    <span class="result-value">@Motor.StallPoint.Current.ToString("F8") A</span>
                </div>
            </div>
        </div>
    }
    
    <!-- 效率计算结果 -->
    @if (ShowEfficiencyResults)
    {
        <div class="results-container">
            <h3>效率计算结果</h3>
            <div class="equation">
                <span class="equation-label">效率变化方程：</span>
                <span class="equation-value">η' = @EfficiencyDerivativeEquation</span>
            </div>
            <h4>最大效率点</h4>
            <div class="efficiency-result">
                <div class="result-item">
                    <span class="result-label">最大效率：</span>
                    <span class="result-value">@MaxEfficiencyValue.ToString("F8")</span>
                </div>
                <div class="result-item">
                    <span class="result-label">对应扭矩：</span>
                    <span class="result-value">@MaxEfficiencyPoint.Torque.ToString("F8") N·m</span>
                </div>
                <div class="result-item">
                    <span class="result-label">对应转速：</span>
                    <span class="result-value">@MaxEfficiencyPoint.Speed.ToString("F8") rpm</span>
                </div>
                <div class="result-item">
                    <span class="result-label">对应电流：</span>
                    <span class="result-value">@MaxEfficiencyPoint.Current.ToString("F8") A</span>
                </div>
            </div>
        </div>
    }
</div>